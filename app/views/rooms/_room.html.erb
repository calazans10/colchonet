<article class="room">
  <h2><%= link_to room.title, room.route %></h2>

  <%= render partial: 'review', locals: {room: room} %>

  <span class="created">
    <%= t '.owner_html', owner: room.user.full_name, when: l(room.created_at, format: :short) %>
  </span>

  <span class="location">
    <%= link_to room.location, "https://maps.google.com/?q=#{room.location}", target: :blank %>
  </span>

  <p><%= room.description %></p>

  <% if belongs_to_user(room) %>
    <ul>
      <li>
        <%= link_to t('.edit'), edit_room_path(room.route) %>
      </li>
      <li>
        <%= link_to t('.destroy'), room_path(room.route), method: :deleted, data: {confirm: t('dialogs.destroy')} %>
      </li>
    </ul>
  <% end %>
</article>
